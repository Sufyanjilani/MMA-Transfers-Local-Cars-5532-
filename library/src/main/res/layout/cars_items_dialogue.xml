<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/carimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:tint="#000" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.65">

                <TextView
                    android:id="@+id/carname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Saloon"
                    android:textColor="@color/text_heading"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/carname"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/carPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="3dp"
                        android:fontFamily="@font/seguisb"
                        android:text="4"
                        android:textColor="@color/text_heading"
                        android:textSize="9sp" />


                    <TextView
                        android:id="@+id/carlag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/carPass"
                        android:drawableLeft="@drawable/ic_bag"
                        android:drawablePadding="3dp"
                        android:fontFamily="@font/seguisb"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/text_heading"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/carhlag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@+id/carlag"
                        android:drawableLeft="@drawable/ic_bag"
                        android:drawablePadding="3dp"
                        android:fontFamily="@font/seguisb"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/text_heading"
                        android:textSize="9sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/carFares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center"
                    android:text="$14.4"
                    android:textColor="@color/text_heading"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/selectMask"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/img_avatar"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>