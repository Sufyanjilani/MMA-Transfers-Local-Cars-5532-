    <TextView
        android:id="@+id/tvPromotionCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15sp"
        android:text="Promotion Code:"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="16sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/etPromotionCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPromotionCode"
        android:hint="Enter your promotion code here."
        android:inputType="text"
        android:maxLength="8"
        android:textCursorDrawable="@color/app_main"
        android:textSize="16sp"
        />

