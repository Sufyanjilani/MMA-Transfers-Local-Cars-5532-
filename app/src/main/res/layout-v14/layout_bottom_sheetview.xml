<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_gray_and_white_inverse"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeuib"
        android:text="Schedule a Ride"
        android:textAllCaps="true"
        android:textColor="@color/color_black_inverse"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_gray_and_white_inverse" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="15dp"
        android:visibility="visible"
        android:weightSum="5">

        <TextView
            android:id="@+id/asap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_asapfilled"
            android:gravity="center_horizontal"
            android:text="ASAP"
            android:textAllCaps="true"
            android:textColor="@color/color_white_inverse"
            android:textSize="16sp"
            android:fontFamily="@font/seguisb"
            />

        <TextView
            android:id="@+id/asap15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_asapoutline"

            android:gravity="center_horizontal"
            android:text="15 Mins"
            android:textColor="@color/color_black_inverse"
            android:textSize="16sp"
            android:fontFamily="@font/seguisb"
            />

        <TextView
            android:id="@+id/asap30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_asapoutline"

            android:gravity="center_horizontal"
            android:text="30 Mins"
            android:textColor="@color/color_black_inverse"
            android:textSize="16sp"
            android:fontFamily="@font/seguisb"
          />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_and_white_inverse"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="10-00-2000"
        android:textColor="@color/color_black_inverse"
        android:textSize="18sp"
        android:fontFamily="@font/seguisb" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_and_white_inverse"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="14:14"
        android:textColor="@color/color_black_inverse"
        android:textSize="18sp"
        android:fontFamily="@font/seguisb" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_gray_and_white_inverse"
        android:visibility="gone" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/color_inverse_black_footerBack"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">
    <TextView
        android:id="@+id/item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/seguisb"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Confirm"
        android:textColor="@color/color_white_inverse"
        android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>