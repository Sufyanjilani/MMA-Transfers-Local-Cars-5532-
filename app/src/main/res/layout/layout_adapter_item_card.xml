<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/color_dark_gray_and_light_inverse"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/barLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/glow_border"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/card_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/check_view"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/ic_check_circle"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cardIv"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/check_view"
            android:scaleType="fitCenter"
            android:src="@drawable/_mastercard" />

        <ImageView
            android:id="@+id/deleteCardIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:tint="@color/red" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cardIv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardNoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/color_black_inverse"
                android:textSize="18sp"
                tools:text="**** **** **** 5967" />

            <TextView
                android:id="@+id/expiresTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-10dp"
                android:layout_toRightOf="@+id/cardIv"
                android:fontFamily="@font/segoeui"
                android:textColor="#B5B5B5"
                android:textSize="11sp"
                tools:text="Expire --,---" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
