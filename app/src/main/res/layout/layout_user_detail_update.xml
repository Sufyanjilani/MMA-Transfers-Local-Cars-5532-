<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_inverse"
    android:minWidth="250dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:padding="16dp"
                android:src="@drawable/ic_backspace" />

            <TextView
                android:id="@+id/textcv_UserDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:fontFamily="@font/segoeuib"
                android:gravity="center"
                android:text="Add"
                android:textAllCaps="true"
                android:textColor="@color/color_black_inverse"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Version"
                android:textColor="@color/app_black"
                android:visibility="gone" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/update_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:fontFamily="@font/segoeuib"
                    android:text="Add Name"
                    android:textColor="#666"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/seguisb"
                    android:paddingTop="10dp"
                    android:text="Add your name so driver can easily identify from whom they are picking"
                    android:textColor="#666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/updateField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/flight_outline"
                    android:focusable="true"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:hint="Enter username"
                    android:imeOptions="actionSearch"
                    android:inputType="textCapCharacters"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:textColor="@color/color_black_inverse"
                    android:textColorHint="#B6B6B6"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/color_inverse_black_footerBack"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="Add"
                    android:fontFamily="@font/seguisb"
                    android:textColor="@color/buttoncolor_inverse"
                    android:textSize="18sp" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</ScrollView>