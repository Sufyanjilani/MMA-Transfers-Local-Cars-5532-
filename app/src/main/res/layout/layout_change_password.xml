<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_header_design" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sub"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-45dp"
            android:background="@color/transparent"
            android:fontFamily="@font/segoeuib"
            android:text="Change Password"
            android:textAllCaps="true"
            android:textColor="@color/color_black_inverse"
            android:textSize="27dp" />

        <TextView
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/center_center"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:text="Please reset your password"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/center_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/currentPasswordEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/color_inverse_black_footerBack"
                    android:focusable="true"
                    android:fontFamily="@font/segoeuil"
                    android:hint="Enter Current Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/color_black_inverse"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/toggleImageForPasswordIv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_visibility_off_black_24dp"
                    android:tint="@color/color_inverse_black_footerBack" />
            </RelativeLayout>


            <View
                android:id="@+id/view_line_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/rounded_corners_asapbox"
                android:backgroundTint="@color/color_inverse_black_footerBack"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/newPasswordEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/color_inverse_black_footerBack"
                    android:focusable="true"
                    android:fontFamily="@font/segoeuil"
                    android:hint="Enter New Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/color_black_inverse"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/toggleImageForPasswordIv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_visibility_off_black_24dp"
                    android:tint="@color/color_inverse_black_footerBack" />
            </RelativeLayout>

            <View
                android:id="@+id/view_line_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/rounded_corners_asapbox"
                android:backgroundTint="@color/color_inverse_black_footerBack"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/confirmPasswordEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/color_inverse_black_footerBack"
                    android:focusable="true"
                    android:fontFamily="@font/segoeuil"
                    android:hint="Confirm New Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/color_black_inverse"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/toggleImageForPasswordIv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_visibility_off_black_24dp"
                    android:tint="@color/color_inverse_black_footerBack" />
            </RelativeLayout>

            <View
                android:id="@+id/view_line_3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/rounded_corners_asapbox"
                android:backgroundTint="@color/color_inverse_black_footerBack"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/togglePass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/color_inverse_black_footerBack"
                android:fontFamily="@font/segoeui"
                android:padding="10dp"
                android:text="Show Password"
                android:textColor="@color/color_inverse_black_footerBack"
                android:textSize="12sp"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/color_inverse_black_footerBack"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:contentPadding="8dp">

                <LinearLayout
                    android:id="@+id/changePasswordLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/progressBarTextTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:fontFamily="@font/seguisb"
                        android:text="NEXT"
                        android:textAllCaps="true"
                        android:textColor="@color/buttoncolor_inverse"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:indeterminateTint="@color/buttoncolor_inverse"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>