<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_inverse"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/ic_close"
            android:tint="@color/color_black_inverse" />

        <!--<com.whygraphics.gifview.gif.GIFView xmlns:gif_view="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/main_activity_gif_vie"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:scaleType="center"-->
        <!--gif_view:gif_src="@string/gif_asset_path" />-->
        <!--<com.medialablk.easygifview.EasyGifView-->
        <!--android:id="@+id/easyGifView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="300dp"-->
        <!--android:src="@drawable/promotion"-->
        <!--g/>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone"

            android:weightSum="5">

            <TextView
                android:id="@+id/promotitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/segoeuiz"
                android:gravity="center"
                android:padding="3dp"

                android:text="Promo Code"
                android:textColor="@color/app_white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_label"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Expired"
                android:textColor="@color/app_white"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-70dp"
            android:src="@drawable/yessign_big" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/seguisb"
            android:gravity="center"
            android:inputType="textCapCharacters"
            android:padding="5dp"
            android:text="Card Added"
            android:textColor="@color/color_black_inverse"
            android:textColorHint="@color/disable_text"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtdetails"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:padding="5dp"

            android:text="We may charge a small amount(1.01) to confirm your card details.This is immediately refunded"
            android:textColor="@color/color_black_inverse"
            android:textColorHint="@color/disable_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corners_button"
            android:backgroundTint="@color/color_gray_and_footer_inverse"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            android:text="Done"
            android:textColor="@color/app_bg_white"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>