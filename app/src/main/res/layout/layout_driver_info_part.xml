<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drv_info_lyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/driverImageIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_person" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/driver_Image">

            <TextView
                android:id="@+id/driveNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/color_black_inverse"
                android:textSize="14sp"
                tools:text="Galedhill" />

            <TextView
                android:id="@+id/ratingHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/driveNameTv"
                android:fontFamily="@font/segoeuil"
                android:gravity="center"
                android:maxLines="2"
                android:text="You Rated"
                android:textColor="@color/Green_textcolor"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <RatingBar
                android:rating="3.5"
                android:theme="@style/RatingBar"
                android:id="@+id/simpleRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingHead"
                android:visibility="visible"
                style="?android:attr/ratingBarStyleSmall"
                />

            <TextView
                android:id="@+id/driverRatingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/driveNameTv"
                android:background="@drawable/avatar_circle"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/app_bg_white"
                android:textSize="7sp"
                android:visibility="visible"
                tools:text="4.9" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/hori_view"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/vehDropBack" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/hori_view"
        android:layout_weight="0.8"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="25dp">

        <TextView
            android:id="@+id/vehicleNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Vehicle Name"
            android:textColor="@color/vehDropBack"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/vehicleNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/seguisb"
            android:textColor="@color/color_black_inverse"
            android:textSize="11sp"
            tools:text="" />

        <TextView
            android:id="@+id/vehicleNoPlateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Details"
            android:textColor="@color/vehDropBack"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/vehicleNoPlateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/seguisb"
            android:textColor="@color/color_black_inverse"
            android:textSize="11sp"
            tools:text="" />


    </LinearLayout>

</LinearLayout>