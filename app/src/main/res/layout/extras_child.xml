<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/color_white_inverse"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <CheckBox
        android:id="@+id/checkbox_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ADULTS(18)"
        android:textColor="@color/txt_color_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/labelhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/seguisb"
        android:text="ADULTS(18)"
        android:textColor="@color/color_black_inverse"
        android:textSize="14sp" />
    <!--    android:background="@drawable/rounded_corners_register"-->

    <LinearLayout
        android:id="@+id/controllLyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minus_adult"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:background="@drawable/avatar_circle"
            android:backgroundTint="@color/color_inverse_black_footerBack"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/app_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/adult_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="0"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/color_black_inverse"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/plus_adult"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/avatar_circle"
            android:backgroundTint="@color/color_inverse_black_footerBack"
            android:elevation="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/app_white"
            android:textSize="14sp" />


    </LinearLayout>

</RelativeLayout>