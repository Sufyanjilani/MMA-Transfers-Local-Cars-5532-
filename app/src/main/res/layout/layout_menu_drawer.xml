<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_gray_and_footer_inverse"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/drawerHeaderRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:id="@+id/headerLytHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="40dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/userpiccard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/userPic"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/userprofile" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/U_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/seguisb"
                    android:text="Jeny Parker"
                    android:textColor="@color/app_white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/U_Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/segoeui"
                    android:text="test@gmail.com"
                    android:textColor="@color/app_white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/U_Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/seguisb"
                    android:text="+44 7700 651151"
                    android:textColor="@color/app_white"
                    android:textSize="14sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/border_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"

            android:layout_below="@+id/headerCard"
            android:background="@color/app_white" />

        <LinearLayout
            android:id="@+id/header_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border_line"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_home"
                android:tint="@color/app_white" />

            <TextView
                android:id="@+id/txtHeaderBookNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/seguisb"
                android:gravity="left|center_vertical"
                android:text="Home"
                android:textColor="@color/app_white"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/content_frame"
        android:background="@color/color_gray_and_footer_inverse"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</RelativeLayout>