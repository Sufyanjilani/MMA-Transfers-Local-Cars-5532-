<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewBg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_dark_gray_and_light_inverse"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/paymentIconIv"
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/selectRb"
            android:src="@drawable/ic_account" />

        <TextView
            android:id="@+id/paymentTextTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/paymentIconIv"
            android:fontFamily="@font/seguisb"
            android:text="Cash"
            android:textColor="@color/color_black_inverse"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/gateWayTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/paymentTextTv"
            android:fontFamily="@font/segoeuil"
            android:text="(Judo)"
            android:textColor="@color/color_black_inverse"
            android:textSize="12sp"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/selectRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="@color/color_black_inverse"
            android:checked="false"
            android:clickable="false"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_corners_done"
            android:fontFamily="@font/segoeui"
            android:backgroundTint="@color/color_inverse_black_footerBack"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:text="Add Card"
            android:textAlignment="center"
            android:textColor="@color/color_white_inverse"
            android:textSize="18sp"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loggedinlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:fontFamily="@font/segoeui"
            android:text="Account Name :"
            android:textColor="@color/color_black_inverse"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/accname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/titleTv"
            android:fontFamily="@font/seguisb"
            android:text="ABC Hotel"
            android:textColor="@color/color_black_inverse"
            android:textSize="13sp" />

    </RelativeLayout>

</RelativeLayout>