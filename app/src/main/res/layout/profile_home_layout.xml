<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeAndWorkLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_home_work_inverse"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/homeRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/homeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/hTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/homeIv"

            android:text="HOME"
            android:textColor="@color/color_red"
            android:fontFamily="@font/seguisb"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setHomeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hTv"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/deleteHomeIv"
            android:layout_toRightOf="@+id/homeIv"

            android:maxLines="1"
            android:text="18 Campbell Close, Bicester, Oxford, Bicester, Oxford 18 Campbell Close, Bicester, Oxford, Bicester, Oxford"
            android:textColor="@color/color_black_inverse"
            android:textSize="18sp"
            android:fontFamily="@font/segoeui"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/deleteHomeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hTv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-15dp"
            android:padding="10dp"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:tint="@color/color_black_inverse"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/workRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/workIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_work" />

        <TextView
            android:id="@+id/wTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/seguisb"
            android:textSize="20sp"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/workIv"

            android:text="WORK"
            android:textColor="@color/color_red"
            />

        <TextView
            android:id="@+id/setWorkTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workIv"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/deleteWorkIv"
            android:layout_toRightOf="@+id/workIv"
            android:maxLines="1"
            android:text="18 Campbell Close, Bicester, Oxford, Bicester, Oxford"
            android:textColor="@color/color_black_inverse"
            android:textSize="18sp"
            android:fontFamily="@font/segoeui"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/deleteWorkIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wTv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-15dp"
            android:padding="10dp"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:tint="@color/color_black_inverse"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>
