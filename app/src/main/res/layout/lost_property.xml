<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_inverse"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@drawable/ic_back__" />


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="120dp"
        android:scaleType="fitCenter"
        />


    <LinearLayout
        android:id="@+id/panellyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBack"

        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="30dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            >

            <TextView
                android:id="@+id/forgotTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/segoeuib"
                android:text="Missing Item"
                android:textColor="@color/color_black_inverse"
                android:textSize="34sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/forgotsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgotTv"
                android:layout_gravity="start"
                android:layout_marginTop="-20dp"
                android:fontFamily="@font/segoeuib"

                android:text="Item"
                android:textColor="@color/app_black"
                android:textSize="40sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bookingRef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgotsub"
                android:layout_gravity="start"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/segoeuib"
                android:text="Booking Ref : 5234343"
                android:textColor="@color/color_black_inverse"
                android:textSize="14sp"
                android:visibility="visible" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                android:tint="@color/img_avatar" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/segoeuisl"
            android:gravity="center"
            android:lineHeight="25dp"
            android:text="Enter lost item details and tap 'SEND' button then we will let you know after confirming from the driver"
            android:textColor="@color/app_black"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Login"
            android:textColor="@android:color/background_dark"
            android:textSize="19sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/missingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rounded_corners_bottom"
                    android:ems="10"
                    android:fontFamily="@font/segoeuil"
                    android:gravity="start"
                    android:hint="Enter Item Name(Mobile ,Bag etc...)"
                    android:inputType="textCapWords"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/logintext"
                    android:textColorHint="@color/app_grey"
                    android:textSize="16sp"
                    android:textStyle="normal">

                </EditText>

                <EditText
                    android:id="@+id/missingdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/missingTitle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corners_bottom"
                    android:fontFamily="@font/segoeuil"
                    android:gravity="start"
                    android:hint="Enter details (color, model etc...)"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="4"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/logintext"
                    android:textColorHint="@color/app_grey"
                    android:textSize="16sp"
                    android:textStyle="normal">

                </EditText>

                <ImageView
                    android:id="@+id/useravater"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/avatar_circle"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_user"
                    android:visibility="gone" />
            </RelativeLayout>

            <Button
                android:id="@+id/forgotBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corners_button"
                android:fontFamily="@font/segoeui"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:text="Send Details"
                android:textColor="@color/buttoncolor_inverse"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/segoeuil"
                android:text="Back to "
                android:textColor="@color/app_black"
                android:textSize="15sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/segoeuil"
                android:text="Login Now!"
                android:textColor="@color/login_label"
                android:textSize="15sp"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>