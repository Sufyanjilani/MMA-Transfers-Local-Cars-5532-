<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_inverse"
    android:clickable="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/headerCv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/color_white_inverse"
        app:cardCornerRadius="0dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:src="@drawable/ic_backspace" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBack"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/statusHeadingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/segoeui"
                    android:scrollHorizontally="true"
                    android:text="Booking Status"
                    android:textAllCaps="false"
                    android:textColor="@color/color_black_inverse"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/JT_jstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="CONFIRMED"
                    android:textAllCaps="true"
                    android:textColor="@color/color_black_inverse"
                    android:textSize="26sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvWaitingDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cancel_Status"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/seguisb"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="We are trying to locate you a driver."

                    android:textColor="@color/color_black_inverse"
                    android:textSize="16sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/bookingref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cancel_Status"
                    android:layout_marginTop="6dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/seguisb"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Booking Ref : TX4545445"
                    android:textAllCaps="true"
                    android:textColor="@color/color_black_inverse"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/shoppingLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corners_asapfilled"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/seguisb"
                            android:text="Shopping collection"
                            android:textAllCaps="true"
                            android:textColor="@color/color_white_inverse"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/store_s"
                            android:visibility="visible" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/shareTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBack"
                android:layout_alignParentRight="true"
                android:layout_marginTop="45dp"
                android:layout_marginRight="13dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/color_inverse_black_footerBack"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:id="@+id/shareTracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/emergencyCall"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/sharetracking"
                        android:tint="@color/color_white_inverse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/segoeui"
                        android:text="Share Journey"
                        android:textColor="@color/color_white_inverse"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/center_map"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/headerCv">
        <include layout="@layout/layout_map" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/bottomPart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/center_map"
        android:background="@color/color_black_and_light_inverse">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/bottomLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <!--            driver and date-->
                    <include layout="@layout/layout_date" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp" />

                    <include layout="@layout/layout_address_pickup_dropoff_via" />

                    <LinearLayout
                        android:id="@+id/b_info_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/color_more_gray_and_white_inverse"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/estimationTimeLl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/esttime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="Est Time:"
                                android:textColor="#666"
                                android:fontFamily="@font/segoeui"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seguisb"
                                android:text="----"
                                android:textColor="@color/color_black_inverse"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:id="@+id/fare_view"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/bar_color"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/fare_lyt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/fareLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/segoeui"
                                android:text="Fare:"
                                android:textSize="16sp"
                                android:textColor="#666"
                              />

                            <TextView
                                android:id="@+id/fare_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seguisb"
                                android:text="----"
                                android:textSize="16sp"
                                android:textColor="@color/color_black_inverse"
                             />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/bar_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/paymentLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/segoeui"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:text="Payment"
                                android:textColor="#666"
                                 />

                            <TextView
                                android:id="@+id/JT_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seguisb"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:text="------"

                                android:textColor="@color/color_black_inverse"
                              />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/driverDetailCv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/color_more_gray_and_white_inverse"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/drv_info_lyt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:visibility="visible"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/driver_Image"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_person" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/driver_Image">

                                    <TextView
                                        android:id="@+id/JT_dname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/seguisb"
                                        android:text="Galedhill"
                                        android:textColor="@color/color_black_inverse"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/ratingHead"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/JT_dname"
                                        android:fontFamily="@font/segoeui"
                                        android:maxLines="2"
                                        android:text="You Rated"
                                        android:textColor="@color/Green_textcolor"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                    <RatingBar
                                        android:id="@+id/simpleRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/ratingHead"
                                        android:visibility="visible"
                                        style="?android:attr/ratingBarStyleSmall"
                                        />

                                    <TextView
                                        android:id="@+id/JT_drating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_toRightOf="@+id/JT_dname"
                                        android:background="@drawable/avatar_circle"
                                        android:fontFamily="sans-serif"
                                        android:padding="3dp"
                                        android:text="4.9"
                                        android:textColor="@color/app_bg_white"
                                        android:textSize="7sp"
                                        android:visibility="visible" />
                                </RelativeLayout>
                            </LinearLayout>

                            <View
                                android:id="@+id/hori_view"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:background="@color/vehDropBack" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_toRightOf="@+id/hori_view"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:orientation="vertical"
                                android:paddingLeft="25dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/segoeui"
                                    android:text="Vehicle Name"
                                    android:textColor="@color/vehDropBack"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/JT_vehname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-5dp"
                                    android:fontFamily="@font/segoeui"
                                    android:lines="1"
                                    android:text=""
                                    android:textColor="@color/color_black_inverse"
                                    android:textSize="10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/segoeui"
                                    android:text="Details"
                                    android:textColor="@color/vehDropBack"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/JT_vehplate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-5dp"
                                    android:fontFamily="@font/segoeui"
                                    android:text=""
                                    android:textColor="@color/color_black_inverse"
                                    android:textSize="10sp" />


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/driverCallAndChatLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:id="@+id/driverCallRl"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corners"
                            android:backgroundTint="@color/color_inverse_black_footerBack"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/callIconIv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/cc"
                                android:padding="3dp"
                                android:src="@drawable/ic_call"
                                android:tint="@color/color_white_inverse"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/cc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTint="@color/app_bg_white"
                                android:fontFamily="@font/seguisb"
                                android:text="Call driver"
                                android:textAlignment="center"
                                android:textColor="@color/color_white_inverse"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/driverChatRl"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/app_black"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/msgIcon1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/driverTv"
                                android:padding="3dp"
                                android:src="@drawable/ic_msg"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/badgeDrTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/driverTv"
                                android:background="@drawable/avatar_circle"
                                android:backgroundTint="#666"
                                android:padding="4dp"
                                android:text="0"
                                android:textColor="@color/app_bg_white"
                                android:textSize="9sp" />

                            <TextView
                                android:id="@+id/driverTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/seguisb"
                                android:text="Chat with driver"
                                android:textColor="@color/app_bg_white"
                                android:textSize="16sp" />
                        </RelativeLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/feedbackHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:text="Feedback"
                        android:textColor="@color/app_bg_white"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/findingNearestDriverRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/color_white_inverse"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_pin"
                android:tint="@color/app_black"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progress_bar"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/segoeuil"
                android:gravity="center"
                android:text="Finding nearest driver"
                android:textColor="@color/color_black_inverse"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/color_black_inverse" />

            <TextView
                android:id="@+id/cancelRideTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center"
                android:text="Cancel Ride"
                android:textColor="@color/app_black"
                android:textSize="14sp"
                android:visibility="visible" />

            <!--Request a driver-->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="@color/red1"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/blink_animation" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>