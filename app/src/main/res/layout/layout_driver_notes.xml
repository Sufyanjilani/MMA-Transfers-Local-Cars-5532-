<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    app:cardBackgroundColor="@color/color_gray_and_white_inverse"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/seguisb"
            android:text="Driver Notes"
            android:textAllCaps="true"
            android:textColor="@color/color_black_inverse"
            android:textSize="20sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/flight_outline"
            android:focusable="true"
            android:focusedByDefault="false"
            android:fontFamily="@font/segoeui"
            android:gravity="left"
            android:hint="Enter your message here.."
            android:inputType="textCapSentences|textMultiLine"
            android:minLines="4"
            android:padding="10dp"

            android:textColor="@color/color_black_inverse"
            android:textColorHint="#B6B6B6"
            android:textSize="18sp"
            android:visibility="visible" />

        <LinearLayout

            android:layout_below="@+id/et"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/doneTv"
                android:layout_width ="wrap_content"
                android:layout_height = "38dp"
                android:textSize = "16sp"
                android:paddingLeft = "18dp"
                android:paddingRight= "18dp"
                android:fontFamily="@font/seguisb"
                android:layout_marginEnd="8dp"
                android:textColor="@color/color_white_inverse"
                android:background="@drawable/button_background"
                android:text="Ok" />
            <Button
                android:fontFamily="@font/seguisb"
                android:id="@+id/cancelTv"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/gray_button_background"
                android:text="Cancel"
                android:textAllCaps="false"
                android:paddingLeft = "18dp"
                android:paddingRight= "18dp"
                  android:textSize="16sp"
                android:textColor="@color/app_white"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/et"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView

                android:background="@drawable/cancel_button_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingRight="15dp"
                android:paddingBottom="8dp"
                android:text="Cancel"
                android:layout_marginEnd="15dp"
                android:textAllCaps="true"
                android:textColor="@color/app_white"
                android:textSize="12dp" />
            <TextView

                android:background="@drawable/button_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/seguisb"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                android:text="Done"
                android:textAllCaps="true"
                android:textColor="@color/app_white"
                android:textSize="12dp" />


        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>