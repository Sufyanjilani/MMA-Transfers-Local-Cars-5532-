<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_inverse"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_header" />

        <RelativeLayout
            android:id="@+id/headerLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- <RelativeLayout
                 android:id="@+id/headerLytRl"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:padding="5dp">

                 <ImageView
                     android:id="@+id/imgBack"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="4dp"
                     android:padding="16dp"
                     android:src="@drawable/ic_burger" />

                 <TextView
                     android:id="@+id/aboutTitleLabel"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerInParent="true"
                     android:fontFamily="@font/segoeuib"
                     android:text="About"
                     android:textAllCaps="true"
                     android:textColor="@color/color_black_inverse"
                     android:textSize="24sp" />

             </RelativeLayout>-->

            <RelativeLayout
                android:id="@+id/middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:paddingBottom="10dp">


                <TextView
                    android:id="@+id/appName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/seguisb"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textAllCaps="true"
                    android:textColor="@color/color_black_inverse"
                    android:textSize="20sp"
                     />

                <ImageView
                    android:id="@+id/pin"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/appName"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_pin"
                    android:tint="@color/footerBack" />

                <TextView
                    android:id="@+id/addressTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appName"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/pin"
                    android:fontFamily="@font/seguisb"
                    android:maxLines="3"
                    android:text="XYZ XYZ XYZ XYZ"
                    android:textAllCaps="true"
                    android:textColor="@color/color_black_inverse"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="16dp">


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:text="Terms &amp; Conditions"
                        android:textColor="@color/txt_white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/terms"
                        android:layout_centerHorizontal="true"
                        android:autoLink="web"
                        android:gravity="center"
                        android:text=""
                        android:textColorLink="@color/txt_white"
                        android:textSize="16sp" />
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerLyt"
            android:background="@color/color_white_inverse"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/layout_phone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/layout_email"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/avatar_circle"
                    android:backgroundTint="@color/footerBack"
                    android:padding="7dp"
                    android:src="@drawable/ic_call"
                    android:tint="@color/color_white_inverse" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/seguisb"
                    android:text="Call"
                    android:textColor="@color/activity_header_bg"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_email"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/avatar_circle"
                    android:backgroundTint="@color/footerBack"
                    android:padding="7dp"
                    android:src="@drawable/ic_email"
                    android:tint="@color/color_white_inverse" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/seguisb"
                    android:text="Email"
                    android:textColor="@color/activity_header_bg"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

        <include layout="@layout/layout_map" />

        <!--     <FrameLayout
                 android:id="@+id/map_container"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_below="@+id/ll" />-->

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLyt"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/transparent_from_top"
        android:gravity="center">

        <!--      <androidx.cardview.widget.CardView
                  android:id="@+id/brandLogo"
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:layout_centerHorizontal="true"
                  android:layout_marginBottom="-40dp"
                  app:cardCornerRadius="20dp"
                  app:cardElevation="5dp">
              </androidx.cardview.widget.CardView>-->

        <ImageView
            android:id="@+id/brandLogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="-30dp"
            android:scaleType="fitXY"
            android:src="@drawable/big_icon" />

        <com.pkmmte.view.CircularImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo"
            android:visibility="gone"
            app:border="true"
            app:shadow="true" />

        <LinearLayout
            android:id="@+id/webLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brandLogo"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingTop="40dp">

            <LinearLayout
                android:id="@+id/layout_powered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outlineaboutweb"
                android:paddingLeft="25dp"
                android:visibility="visible"
                android:paddingRight="25dp">

                <ImageView
                    android:id="@+id/webImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/map_a"
                    android:tint="@color/color_black_inverse" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/websitelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/seguisb"
                        android:text="Website"
                        android:textColor="@color/color_black_inverse"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtWebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text31111"
                        android:layout_centerHorizontal="true"
                        android:autoLink="web"
                        android:text="@string/Web"
                        android:textColorLink="@color/txt_color_light"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/webLyt"
            android:gravity="center"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/versionTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/segoeuib"
                        android:text=""
                        android:textColor="@color/color_inverse_black_footerBack"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text31111"
                        android:layout_centerHorizontal="true"
                        android:autoLink="web"
                        android:text="@string/Web"
                        android:textColorLink="@color/txt_color_light"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

