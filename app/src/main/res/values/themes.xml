<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaintTaxi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_main</item>
        <item name="colorPrimaryVariant">@color/app_main</item>
        <item name="colorOnPrimary">@color/app_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_main</item>
        <item name="colorSecondaryVariant">@color/app_main</item>
        <item name="colorOnSecondary">@color/app_main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_btn_bg_color</item>
        <item name="colorControlActivated">@color/footerBack</item>
    </style>

    <style name="inputTextStyle">
        <item name="android:textColor">@color/color_black_inverse</item>
        <item name="android:textColorHint">@color/color_hint_text_color_inverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">10dp</item>

    </style>


    <style name="entryScreenHeadingStyle">
        <item name="android:textColor">@color/color_black_inverse</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/segoeuib</item>
    </style>

    <style name="entryScreenDescriptionStyle">
        <item name="android:textColor">@color/color_black_inverse</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="entryScreenDescription2Style">
        <item name="android:textColor">@color/color_black_inverse</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="entryScreenButtonStyle">

        <item name="android:fontFamily">@font/seguisb</item>
        <item name="android:textSize">22sp</item>
    </style>


