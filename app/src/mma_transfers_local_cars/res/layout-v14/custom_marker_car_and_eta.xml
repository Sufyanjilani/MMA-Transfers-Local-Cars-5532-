<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordered_button">

            <TextView
                android:id="@+id/snippet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_white"
                android:fontFamily="@font/segoeuib"
                android:gravity="center_vertical"
                android:text="ETA 45m"
                android:textAlignment="center"
                android:textColor="@color/Greencolor"
                android:textSize="10dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snippet"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/arr"
                android:fontFamily="@font/segoeui"
                android:maxLines="2"
                android:paddingLeft="3dp"
                android:text="GATWICK AIRPORT NORTH"
                android:textColor="@color/text_heading"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/arr"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:rotation="270"
                android:src="@drawable/ic_round_arrow"
                android:tint="@color/bg_black" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/bc_fieldarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_filled_arrow"
        android:backgroundTint="@color/app_white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/markerPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bc_fieldarrow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_pin"
        android:visibility="gone" />
</RelativeLayout>