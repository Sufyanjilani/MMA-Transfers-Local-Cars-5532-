<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_inverse"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <Button
        android:id="@+id/aaaaaaaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Dummy Card Judo"
        android:visibility="gone" />

    <TextView
        android:id="@+id/paymentSubLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:layout_marginBottom="10dp"
        android:fontFamily="@font/segoeui"
        android:text="Select a payment method to add"
        android:textColor="@color/color_black_inverse"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnDone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/paymentRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_adapter_item_payment" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/creditCardRv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:itemCount="8"
                    tools:listitem="@layout/layout_adapter_item_card" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/seguisb"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_corners_done"
            android:gravity="center"
            android:padding="16dp"
            android:text="Done"
            android:textColor="@color/color_white_inverse"
            android:textSize="22sp"
            android:visibility="visible" />
    </RelativeLayout>

